<?xml version="1.0" encoding="UTF-8"?>
<vm:BasePage xmlns:vm="clr-namespace:FFImageLoading.Forms.Sample"
             x:TypeArguments="vm:SimpleGifPageModel" 
             xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FFImageLoading.Forms.Sample.SimpleGifPage"
        xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
        Title="Simple Gif">
    <ContentPage.Content>
        <ContentView HorizontalOptions="Center" VerticalOptions="Center">
            <ffimageloading:CachedImage 
             Source="{Binding ImageUrl}">
<!--            <ffimageloading:CachedImage.Transformations>
                <fftransformations:CircleTransformation/>
            </ffimageloading:CachedImage.Transformations>-->
            </ffimageloading:CachedImage>
        </ContentView>
    </ContentPage.Content>
</vm:BasePage>
